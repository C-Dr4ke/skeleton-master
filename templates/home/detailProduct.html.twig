{% extends 'base.html.twig' %}

{% block title %}Detail du Menu
{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/detailProduct.css') }}">

<div class="menu">
	<section class="product-presentation">
		<div class="columns is-medium">
			<div class="column is-6-medium">
				<div class="picture">
					<div
						class="responsive-img">
						<!---->
						<figure class="responsive-img-figureLoaded">
							<picture>
								<img src="{{ asset('upload/') }}{{ product.picture }}" alt="{{ product.title }}" width="600"></picture>
							<!---->
							<!---->
						</figure>
					</div>
				</div>
			</div>
			<div data-test-id="product-title" class="content column is-5-medium is-offset-1-medium">
				<h1>
					{{ product.title }} 
				</h1>

				<p class="description"> {{product.description}}</p>
				<!---->

				<h1>
					Prix
				</h1>
				<p class="description"> {{product.price}}€</p>
				{% if product.subCategory.category.title == "Menu" %}
			
				<a href="{{ path('addCart', {'id': product.id,  param: 'boisson'}) }}" class="btn btn-primary rounded my-2">Commander</a>

		 
				{% elseif product.subCategory.category.title == "Plats" %} 
				<a href="{{ path('addCart', {'id': product.id,  param: 'boisson'}) }}" class="btn btn-primary rounded my-2">Commander</a>
				
				{% else %}
					
				<a href="{{ path('addCart', {'id': product.id,  param: 'carte'}) }}" class="btn btn-primary rounded my-2">Commander</a>

				{% endif %}
			</div>
		</div>
	</section>
</div>



{# Modal #}
<div class="modal fade text-center" id="choiceConfirm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-3">
      <div class="modal-header">
        <p class="modal-title" id="exampleModalLabel"><i class="fa-solid fa-trash-can"></i> CONFIRMATION</p>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <p><small>Ce produit à été ajouté au panier</small></p>  
	  <small>Choisissez votre boisson ?</small> 
	 
      </div>
