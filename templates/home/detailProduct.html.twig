        <a href="{{ path('addCart', {'id': product.id,  param: 'carte', boisson: boisson.id }) }}" class="btn btn-primary btn-sm rounded"><i class="fa-solid fa-ban"></i> &nbsp;Non</button>
        <a href="{{ path('addCart', {'id': product.id,  param: 'Dessert', boisson: boisson.id }) }}" class="btn btn-success btn-sm rounded text-decoration-none"><i class="fa-solid fa-trash-can"></i> &nbsp;Oui</a>
      </div> #}
