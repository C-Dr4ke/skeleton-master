{% extends 'base.html.twig' %}

{% block title %}Nos Desserts
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">

	<header class="bg-light py-5">
		<div class="container px-4 px-lg-5 my-5">
			<div class="text-center text-black">
				<h2 class="display-4 fw-bolder">Nos Dessert</h2>

			</div>
		</div>
	</header>
	
	<!-- Section-->
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"></div>
		</div>
	</section>


    <h2> Compositions</h2>
	<div class="row justify-content-evenly  mt-3">

		{% for product in products %}
        {% if product.subCategory.title == "Compositions sucr√©s" %}
           
		  	<div class="card menuCard">
					<a href="{{path('detailProduct', { id: product.id}) }}"/>
					<div class="upper">
						<img src="{{ asset('upload/') }}{{ product.picture }}" alt="{{ product.title }}">
					</div>
					<div class="lower">
						<div class="card__left text-center">
							<div class="food__title">
								{{ product.title }}
							</div>
						</div>

					</div>
				</a>
			</div>
        {% endif %}
		{% endfor %}
	</div>

     <h2> Milkshakes</h2>
	<div class="row justify-content-evenly  mt-3">

		{% for product in products %}
        {% if product.subCategory.title == "Milkshakes" %}
           
		   	<div class="card">
					<a href="{{path('detailProduct', { id: product.id}) }}"/>
					<div class="upper">
						<img src="{{ asset('upload/') }}{{ product.picture }}" alt="{{ product.title }}">
					</div>
					<div class="lower">
						<div class="card__left text-center">
							<div class="food__title">
								{{ product.title }}
							</div>
						</div>

					</div>
				</a>
			</div>
        {% endif %}
		{% endfor %}
	</div>

{% endblock %}
