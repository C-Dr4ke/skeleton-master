{% extends 'base.html.twig' %}

{% block title %}Nos Menus
{% endblock %}
{% block main %}
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
	<link rel="stylesheet" href="{{ asset('css/sideNavbar.css') }}">

	<div class="forme">
		<div class="sidenav">
			<ul>
			{# <li><a href="{{ path("Entrees")}}">Entrées</a></li> #}
			<li><a href="{{ path("Snack")}}">Snack</a></li>
			<li><a href="{{ path("Plats")}}">Plats</a></li>
			<li><a href="{{ path("Menu")}}">Menu</a></li>
			<li><a href="{{ path("Dessert")}}">Dessert</a></li>
			<li><a href="{{ path("Boissons")}}">Boissons</a></li>
			</ul>
		</div>

		<div class="productContainer">
			<header class="bg-light py-5" id="boisson">
				<div class="container px-4 px-lg-5">
					<div class="text-center text-black">
						<h2 class="display-4 fw-bolder">Nos Menus</h2>

					</div>
				</div>
			</header>

			<!-- Section-->
			<section class="py-5">
				<div class="container px-4 px-lg-5 mt-5">
					<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center"></div>
				</div>
			</section>

			<h2> Formules Midi</h2>

			<div class="row  justify-content-between  mt-3">

				{% for product in products %}
					{% if product.subCategory.title == "Formules Midi" %}
						<div class="card">
							<a href="{{path('detailProduct', { id: product.id}) }}"/>
							<div class="upper">
								<img src="{{ asset('upload/') }}{{ product.picture }}" alt="{{ product.title }}">
							</div>
							<div class="lower">
								<div class="card__left text-center">
									<div class="food__title">{{ product.title }}</div>
								</div>
							</div>
							</a>
						</div>
					{% endif %}
				{% endfor %}
			</div>

			<h2> Menu XXL</h2>
			<div class="row  justify-content-between  mt-3">
				{% for product in products %}
					{% if product.subCategory.title == "Menu XXL" %}
						<div class="card">
							<a href="{{path('detailProduct', { id: product.id}) }}"/>
								<div class="upper">
									<img src="{{ asset('upload/') }}{{ product.picture }}" alt="{{ product.title }}">
								</div>
								<div class="lower">
									<div class="card__left text-center">
										<div class="food__title">{{ product.title }}</div>
									</div>

								</div>
							</a>
						</div>
					{% endif %}
				{% endfor %}
			</div>

			<h2> Menus Crêpes Salées Signatures</h2>
			<div class="row  justify-content-between  mt-3">
				{% for product in products %}
					{% if product.subCategory.title == "Menus Crêpes Salées Signatures" %}
						<div class="card">
							<a href="{{path('detailProduct', { id: product.id}) }}"/>
							<div class="upper">
								<img src="{{ asset('upload/') }}{{ product.picture }}" alt="{{ product.title }}">
							</div>
							<div class="lower">
								<div class="card__left text-center">
									<div class="food__title">{{ product.title }}</div>
								</div>
							</div>
							</a>
						</div>
					{% endif %}
				{% endfor %}
			</div>
			<h2> Menu Chicken</h2>
			<div class="row justify-content-evenly  mt-3">
				{% for product in products %}
					{% if product.subCategory.title == "Menu Chicken" %}
						<div class="card menuCard">
							<a href="{{path('detailProduct', { id: product.id}) }}"/>
							<div class="upper">
								<img src="{{ asset('upload/') }}{{ product.picture }}" alt="{{ product.title }}">
							</div>
							<div class="lower">
								<div class="card__left text-center">
									<div class="food__title">{{ product.title }}</div>
								</div>
							</div>
							</a>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
{% block body %}{% endblock %}
